<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_select_gender"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:theme="@style/AppTheme"
    tools:context=".ChooseGenderActivity">

    <ImageView
        android:id="@+id/img_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="163dp"
        android:layout_marginBottom="333dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/btn_continue"
        app:layout_constraintStart_toStartOf="@+id/img_female"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_male_outlined" />

    <ImageView
        android:id="@+id/img_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="374dp"
        android:layout_marginBottom="89dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/btn_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_female_outlined" />

    <TextView
        android:id="@+id/txt_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/montserrat"
        android:text="Male"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/img_male"
        app:layout_constraintTop_toBottomOf="@+id/img_male" />

    <TextView
        android:id="@+id/txt_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/montserrat"
        android:text="Female"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/img_female"
        app:layout_constraintTop_toBottomOf="@+id/img_female" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="101dp"
        android:background="@drawable/ic_btn_round_gradient"
        android:elevation="5dp"
        android:onClick="onClick"
        android:text="@string/continue_"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_male" />
</androidx.constraintlayout.widget.ConstraintLayout>